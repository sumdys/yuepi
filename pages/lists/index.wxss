.container{
  background-color: #f8f8f8;
}

.recombox{
  width: 100%;
  box-sizing: border-box;
  margin-top: 5px;
  /* padding: 16px 10px; */
  background-color: #fff;
  border-top: 1px solid #dadada;
}

.recom{
  position: relative;
  width: 100%;
  margin-bottom: 15px;
  height: 200px;
}
.recom .produ{
  width: 100%;
  height: 100%;
}
.title{
  padding:5px 0px;
  position: absolute;
  bottom: 0px;
  background:rgba(0,0,0,0.5);
  height: 50px;
  width: 100%;
  color: white;
}
.title_1{
  display: block; 
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.title_bottom{
  margin-top: 5px;
}
.title_2{
  float: right;
  margin-right: 10px;
  font-size: 14px;
  color: red;
}
.title_3{
  float: left;
}
.title_3 text{
  padding: 0px 5px;
  border-right: 1px #ccc solid;
}
.price{
  font-size: 18px;
}
.title_3 .hidden_border{
  border: none;
}